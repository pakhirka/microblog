{% extends 'base.html.twig' %}

{% block body %}
    <h1>Posts list</h1>


  {{ form_start(form) }}
  {{ form_widget(form) }}
  <div class="form-group">
    <button type="submit" class="btn btn-primary" style="width:100%">{{ 'form.create' | trans }}</button>
  </div>
  {{ form_end(form) }}

	

    <table class="table table-stripped">
        <thead>
            <tr>
                <th>User</th>
                <th>Content</th>
                <th>Create Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
		<tr id="insertAttr"></tr>
        {% for post in posts %}
            <tr>
                <td>{{ post.user }}</td>
                <td>{{ post.content }}</td>
                <td>{% if post.createdAt %}{{ post.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
				{% if post.user|lower == app.user|lower %}
                    <ul>
						<li>							
							<a href="{{ path('admin_posts_delete', { 'id': post.id }) }}">Delete</a>
						</li>
                    </ul>
				{% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
	{{ knp_pagination_render(posts) }}
{% endblock %}
